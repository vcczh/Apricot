<!DOCTYPE html>
<html lang="en">
<head>
    <title>Apricot</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" type="text/css" href="./node_modules/bootstrap/dist/css/bootstrap.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script type="text/javascript" src="./node_modules/bootstrap/dist/js/bootstrap.js"></script> 
    <link rel="stylesheet" type="text/css" href="./css/home_page.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.2/angular-route.js"></script>
    <script src="js/angular-ui-router.js"></script>
    <script src="js/app.js"></script>
</head>
<body ng-app="apricotApp">

<!-- nav bar  -->
<div class="global-nav">
    <div class="index-nav-container">

        <!-- navigation logo -->
        <div class="nav-bar-logo">
            <!-- <img src="img/logo.jpg"> -->
            <span>Apricot</span>
        </div>

        <!-- navigation menu -->
        <div class="nav-menu">
            <ul class="nav-list">
                <li id="nav-home">
                    <a class="nav-menu-active" ui-sref="feeds">
                        <span class="nav-list-icon glyphicon glyphicon-home glyphicon-lg"></span>
                        <span class="nav-list-text">Home</span>
                    </a>
                </li>
                <li id="nav-inventory">
                    <a ui-sref="profile">
                        <span class="nav-list-icon glyphicon glyphicon-th glyphicon-lg"></span>
                        <span class="nav-list-text">Inventory</span>
                    </a>
                </li>
                <li id="nav-notification">
                    <a ui-sref="notification">
                        <span class="nav-list-icon glyphicon glyphicon-bell glyphicon-lg"></span>
                        <span class="nav-list-text">Notification</span>
                    </a>
                </li>
            </ul>
        </div> 

        <!-- navigation right -->

        <div class="nav-right clearFix">

            <div class="nav-search">
              <form class="nav-form-search" action="/search">
                  <input type="text" class="nav-search-input" placeholder="Search Apricot" autocomplete="off" spellcheck="false">
                  <span class="nav-search-icon-wrapper">
                      <button type="submit" class="nav-search-icon glyphicon glyphicon-search glyphicon-lg"></button>
                  </span>
              </form>
            </div>

            <ul class="nav-right-actions">
                <li class="nav-setting dropdown ">
                    <a class="nav-setting-toggle dropdown-toggle" data-toggle="dropdown"><img src="img/user-pic1.jpg">
                    </a>
                    <ul class="dropdown-menu nav-setting-dropdown">
                      <li><a href="#">Ziqiang Shi</a></li>
                      <li class="divider"></li>
                      <li><a href="#">Settings</a></li>
                      <li><a href="#">Log out</a></li>
                    </ul> 
                </li>
                <li class="nav-post">
                    <button type="button" class="btn btn-primary new-post">POST</button>
                </li>
            </ul> 
        </div>
   </div>
</div>

<div ui-view>
</div>

</body>
</html>